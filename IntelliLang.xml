<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="JSX Harmony" injector-id="xml">
      <display-name>View/@className</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("className")).withParent(xmlTag().withLocalName(string().equalTo("View")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>